{
  "manifest_version": 3,
  "name": "ShinePet",
  "version": "0.2.0",
  "description": "可拖拽、会跳舞的浏览器电子宠物",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "ShinePet - 点击切换显示/隐藏"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "src/options.html"
}
